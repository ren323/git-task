<div class="field row">
  <h1>Editing Book</h1>
    <% if @book.errors.any? %>
      <h3><%= @book.errors.count %>error prohibited this book from being saved:</h3>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <h3><%= message %></h3>
          <% end %>
        </ul>
    <% end %>
  <div class="col-lg-5">
    <%= form_for @book do |f| %>
          <div>
          <%= f.label :title, 'Title' %>
          </div>
          <div>
          <%= f.text_field :title %>
          </div>
          <div>
          <%= f.label :body, 'Opinion' %>
          </div>
          <div>
          <%= f.text_area :body %>
          </div>
          <div class="actions">
          <%= f.submit 'Update Book' %>
        </div>
    <% end %>
  </div>

  <div class = "book-menus">
  	<%= link_to "Show", book_path(@book) %>
  |
  <a class="back" href="/books">Back</a>
  </div>
</div>