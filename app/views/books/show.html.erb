<div class='row'>
  <div class='col-xs-3'>
    <% if current_user %>
    <h1>User info</h1>
    <table class="table">
      <div class="profile-container">
        <thead>
          <tr><th><%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></th></tr>
             <tr> <th class="profile-name">name</th><th><%= @book.user.name %></th></tr>
           <tr> <th class="profile-introduction">introduction</th><th><%= @book.user.introduction %></th></tr>

          <tr><td><button type="button" class="btn btn-default"><%= link_to edit_user_path(current_user) do %><span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
            </button>
            <% end %>
          </td></tr>
        </thead>
      </div>
    </table>
    <% end %>
    <h1>New book</h1>
    <% if @newbook.errors.any? %>
    <div id="error_explanation">
      <h3><%= @newbook.errors.count %>error prohibited this obj from being saved:</h3>
      <ul>
      <% @newbook.errors.full_messages.each do |message| %>
        <h3><%= message %></h3>
      <% end %>
      </ul>
    </div>
    <% end %>
    <%= form_for(@newbook) do |f| %>
        <div>
        <%= f.label :title, 'Title' %>
        </div>
        <div>
        <%= f.text_field :title %>
        </div>
        <div>
        <%= f.label :body, 'Opinion' %>
        </div>
        <div>
        <%= f.text_area :body %>
        </div>
        <%= f.submit 'Create Book' %>
    <% end %>
  </div>
	<div class='col-xs-9'>
		<h1>Book detail</h1>
	    <table class="table">
	       <thead>
	        <tr>
	        	<td><%= link_to user_path(@book.user) do %>
	        		<%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %><%= @book.user.name %>
	        		<% end %>
	        	</td>
	          <td><%= link_to book_path(@book) do %>
	          	<%= @book.title %>
	          	<% end %>
	          </td>
	          <td><%= @book.body %></td>
					<td class = "book-menus">
			  <% if @user.id == current_user.id %>
        <%= link_to "Edit", edit_book_path(@book.id) %></td>
				<td class = "book-menus">
				  <%= link_to "Destroy", book_path(@book.id), method: :delete, data: { confirm: "Are you sure？", commit: "削除する", cancel: "やめる", title: "ご確認ください" }  %></td>
					</tr>
        <% end %>
				</thead>
	    </table>
	</div>
</div>