<div class='row'>
  <div class='col-xs-3'>
    <% if current_user %>
    <h1>User info</h1>
    <table class="table">
      <div class="profile-container">
        <thead>
          <tr><th><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></th></tr>
             <tr> <th class="profile-name">name</th><th><%= current_user.name %></th></tr>
            <tr> <th class="profile-introduction">introduction</th><th><%= current_user.introduction %></th></tr>
          <tr><td><button type="button" class="btn btn-default"><%= link_to edit_user_path(current_user) do %><span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
            </button>
            <% end %>
          </td></tr>
        </thead>
      </div>
    </table>
    <% end %>
    <h1>New book</h1>
    <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= @book.errors.count %>error prohibited this obj from being saved:</h2>
      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
    <% end %>
    <%= form_for @book do |f| %>
        <div>
        <%= f.label :title, 'Title' %>
        </div>
        <div>
        <%= f.text_field :title %>
        </div>
        <div>
        <%= f.label :body, 'Opinion' %>
        </div>
        <div>
        <%= f.text_area :body %>
        </div>
        <div class="container">
          <%= f.submit 'Create Book' %>
       </div>
    <% end %>
  </div>
  <div class="col-xs-9">
      <h2>Users</h2>
    <table class="table">
      <% @users.each do |user| %>
      <thead>
        <tr>
          <th>imag</th>
          <th class="profile-name">name</th>
        </tr>
        <tr>
          <td><%= link_to user_path(current_user.id) do %>
                  <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
                    <% end %>
                  </td>
                <td><%= link_to book_path(current_user.id) do %><%= current_user.name %><% end %></td>
              <td><%= link_to "show", user_path(current_user.id) %></td>
        </tr>
      </thead>
    <% end %>
    </table>
  </div>
</div>